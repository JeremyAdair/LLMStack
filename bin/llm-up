#!/usr/bin/env bash
set -euo pipefail

compose_files=(
  "compose/docker-compose.yml"
  "compose/ollama/docker-compose.yml"
  "compose/open-webui/docker-compose.yml"
  "compose/qdrant/docker-compose.yml"
  "compose/postgres/docker-compose.yml"
  "compose/redis/docker-compose.yml"
  "compose/reverse-proxy/docker-compose.yml"
  "compose/monitoring/docker-compose.yml"
)

args=()
for file in "${compose_files[@]}"; do
  args+=("-f" "$file")
done

docker compose "${args[@]}" up -d
