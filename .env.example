# Core services
OLLAMA_BASE_URL=http://ollama:11434
QDRANT_URL=http://qdrant:6333

# Postgres
POSTGRES_USER=llmstack
POSTGRES_PASSWORD=llmstack
POSTGRES_DB=llmstack

# pgAdmin
PGADMIN_DEFAULT_EMAIL=admin@llmstack.localtest.me
PGADMIN_DEFAULT_PASSWORD=admin

# RAG pipeline
RAG_COLLECTION=documents
RAG_EMBED_MODEL=nomic-embed-text
RAG_VECTOR_SIZE=768
RAG_CHUNK_SIZE=400
RAG_CHUNK_OVERLAP=50
RAG_SOURCE_DIRS=/workspace/processed,/workspace/ingest

# Flowise
FLOWISE_USERNAME=
FLOWISE_PASSWORD=
FLOWISE_BASE_PATH=/flowise

# OpenHands
OPENHANDS_BASE_PATH=/openhands
OPENHANDS_IMAGE=docker.all-hands.dev/all-hands-ai/openhands:0.54
OPENHANDS_RUNTIME_IMAGE=docker.all-hands.dev/all-hands-ai/runtime:0.54-nikolaik
OPENHANDS_SANDBOX_VOLUMES=/mnt/c/llm-stack/repos:/workspace:rw
OPENHANDS_SANDBOX_NETWORKS=["llm-stack_llm-stack"]
OPENHANDS_LLM_MODEL=
OPENHANDS_LLM_BASE_URL=
OPENHANDS_LLM_API_KEY=
GIT_USER_NAME=
GIT_USER_EMAIL=
FORGEJO_BASE_URL=http://forgejo:3000
FORGEJO_OWNER=
FORGEJO_REPO=
FORGEJO_TOKEN=

# Workspace container
WORKSPACE_UID=1000
WORKSPACE_GID=1000

# Forgejo
FORGEJO_UID=1000
FORGEJO_GID=1000

# Auth (Authelia)
AUTHELIA_DOMAIN=llmstack.lan
AUTHELIA_JWT_SECRET=change-me
AUTHELIA_SESSION_SECRET=change-me
AUTHELIA_STORAGE_ENCRYPTION_KEY=change-me
AUTHELIA_URL=https://llmstack.lan/authelia
AUTHELIA_DEFAULT_REDIRECT_URL=https://llmstack.lan/
AUTH_DOMAIN=llmstack.lan
AUTH_DOMAIN_WILDCARD=*.llmstack.lan

# Grafana
GRAFANA_ROOT_URL=https://grafana.llmstack.lan/

# Node-RED
NODE_RED_HOST=localhost
NODE_RED_PORT=1880
NODE_RED_ENABLE_SAFE_MODE=false

# Landing page
LANDING_HOSTNAME=llmstack.lan

# STT (Whisper)
STT_MODEL_PATH=/models/ggml-base.en.bin

# TTS (Piper)
TTS_VOICE_MODEL=/voices/en_US-amy-low.onnx
